<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<package name="login" extends="struts-default,json-default" namespace="/">
		<action name="login" class="com.hust.action.login.LoginAction">
			<result name="success">
            /display.jsp
            </result>
		</action>
		<action name="logout" class="com.hust.action.login.LoginAction" method="logout" >
			<result name="logout" >/login.html</result>
		</action>
	</package>
</struts>